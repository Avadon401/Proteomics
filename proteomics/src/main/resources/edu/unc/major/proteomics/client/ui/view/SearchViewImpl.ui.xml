<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
                         xmlns:g="urn:import:com.google.gwt.user.client.ui"
                         xmlns:my='urn:import:edu.unc.major.proteomics.client.ui.widget'
                         xmlns:tb='urn:import:edu.unc.major.proteomics.client.ui.widget.table'>
        <ui:style>
        		.searchLabel {
        			float: left;	
        		}
                .searchPanel {
					width: 610px ;
				 	margin-left: auto ;
				 	margin-right: auto ;
				 	margin-bottom: 20px ;
				}
				.bandPanel {
					border: 1px solid #CCCCCC;
				}
				.bandPanel td {
					font-size: 11px !important;
				}
				.compPanel {
					margin: 10px auto;	
					border: 1px solid #CCCCCC;
				}
				.criteria-dropshadow {
				        background: #ededed url(/edu.unc.major.proteomics.Application/images/search-criteria-shadow.png) repeat-x left bottom;
				        height: 6px;
				}
				.resultsPanel {
					width: 100%;	
					margin: 0 auto;
				}
				.compPanel td {
					font-size: 11px !important;
				}
        </ui:style>
        <g:FlowPanel>
	        <g:HorizontalPanel styleName="{style.searchPanel}">
	       		<g:cell verticalAlignment="ALIGN_MIDDLE">
	       			<g:Label styleName="{style.searchLabel}" ui:field="searchLabel" text="Gene Symbol"/>
	       		</g:cell>
	       		<g:cell>
	       			<my:InputListWidgetSearch ui:field="searchBox"/>
	       		</g:cell>
	       		<g:cell verticalAlignment="ALIGN_MIDDLE">
	       			<g:Button ui:field="searchButton" text="Search"/>
	       		</g:cell> 
	       		<g:cell verticalAlignment="ALIGN_MIDDLE">
	       			<g:Button ui:field="clearButton" text="Clear"/>
	       		</g:cell>           
	        </g:HorizontalPanel>
	        <g:DisclosurePanel ui:field="disclosurePanel">
		        <g:HorizontalPanel styleName="{style.resultsPanel}">
		        	<g:cell>
				        <tb:BandCellTable styleName="{style.bandPanel}" ui:field="bandCellTable">
				        </tb:BandCellTable>
			        </g:cell>
			        <g:cell>
				        <tb:PreyCellTable styleName="{style.bandPanel}" ui:field="preyCellTable">
				        </tb:PreyCellTable>
			        </g:cell>
			        <g:cell>
				        <tb:SiRNAValCellTable styleName="{style.bandPanel}" ui:field="siRNAValCellTable">
				        </tb:SiRNAValCellTable>
			        </g:cell>
		        </g:HorizontalPanel>
	        </g:DisclosurePanel>
	        <g:FlowPanel styleName="{style.criteria-dropshadow}" ui:field="dropShadow">
	        </g:FlowPanel>
         	<tb:TppProteinCellTable styleName="{style.compPanel}" ui:field="compTable">
		    </tb:TppProteinCellTable>
        </g:FlowPanel>
</ui:UiBinder>